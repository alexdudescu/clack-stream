{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2017",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2021",
            "es2016"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "strict": true,
        "outDir": "./bin",
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "paths": {
            "@alexdudescu/clack-streams" : ["./packages/clack-streams/src"]
        }
    },
    "include": [
        "packages"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}

